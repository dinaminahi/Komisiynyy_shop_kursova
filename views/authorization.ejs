<%- include('partials/header'); -%>
<div class="container text-center">
  <form action="/authorization" class="form-signin" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">Авторизація</h1>
    <input type="email" class="form-control top" name="email" placeholder="Електронна пошта" required>
    <input type="password" class="form-control bottom" name="password" placeholder="Пароль" autocomplete="off" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Ввійти</button>
    <p class="mt-5 mb-3 text-muted">Комісійний магазин</p>
  </form>
</div>
<%- include('partials/footer'); -%>
